[Unit]
Description=Traefik reverse proxy
Requires=network.target
After=network.target

[Service]
User=root
Restart=on-failure
Type=simple
ExecStart=/usr/local/bin/traefik -c {{ traefik_config_dir }}/traefik.conf.toml
ExecReload=/bin/kill -HUP $MAINPID
KillSignal=SIGINT

[Install]
WantedBy=multi-user.target